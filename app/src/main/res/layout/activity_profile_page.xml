<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.christiancarl.schedgie.ProfilePage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:text="Profile"
        android:textColor="#d2230b"
        android:fontFamily="Graphik"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="95dp"
            android:layout_height="80dp"
            android:onClick="btn_Home"
            android:background="#ffff03"
            android:drawableBottom="@drawable/navho"
            android:text="Home"/>
        <Button
            android:layout_width="95dp"
            android:layout_height="75dp"
            android:onClick="btn_Notes"
            android:background="#ffff03"
            android:text="Reminders"
            android:drawableBottom="@drawable/navnot"/>
        <Button
            android:layout_width="95dp"
            android:layout_height="75dp"
            android:onClick="btn_Schedule"
            android:background="#ffff03"
            android:text="Schedule"
            android:drawableBottom="@drawable/navcal"/>
        <Button
            android:layout_width="97dp"
            android:layout_height="75dp"
            android:onClick="btn_Profile"
            android:background="#ffff03"
            android:text="Profile"
            android:drawableBottom="@drawable/navpro"/>
    </LinearLayout>

</RelativeLayout>
